<Window x:Class="Software_Projekt.View.InputPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Projekt.View"
        mc:Ignorable="d"
        Title="InputPopupWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Anzahl Zahlenreihen"/>
            <ComboBox SelectedIndex="0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
            </ComboBox>
            <Button Content="Einstellrad"/>
            <TextBlock Text="Eingabe von Zahlenreihen"/>
            <Button Content="Weiter"/>
        </StackPanel>
    </Grid>
</Window>
