<Window x:Class="Software_Projekt.View.InputPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Projekt.View"
        mc:Ignorable="d"
        Title="InputPopupWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Anzahl Zahlenreihen"/>
            <ComboBox SelectedIndex="0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
            </ComboBox>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="Zahlenreihe eingeben:" Margin="0,0,5,0"/>
                <TextBox Width="300"/>
                <ComboBox SelectedIndex="0">
                    <ComboBoxItem Content="Zahlenreihe"/>
                    <ComboBoxItem Content="andere Möglichkeit"/>
                    <ComboBoxItem Content="andere Möglichkeit"/>
                </ComboBox>
            </StackPanel>
            <Button Content="Weiter" HorizontalAlignment="Center" Click="OnClickContinue"/>
        </StackPanel>
    </Grid>
</Window>
